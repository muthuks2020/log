<!DOCTYPE html>
<html ng-app="unipaperApp">
  <head lang="en">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title><%= title %></title>

    <!-- Vendors Styles -->
    <script src="javascripts/jquery.min.js"></script>
    <script src="javascripts/angular.min.js"></script>
    <script src="javascripts/angular-route.min.js"></script>
    <script src="javascripts/tether.min.js"></script><!-- Tether for Bootstrap --> 
    <script src="javascripts/bootstrap.min.js"></script>


    <link href="stylesheets/bootstrap.min.css" type="text/css" rel="stylesheet" media="all" />
    <link href="stylesheets/reset.css" type="text/css" rel="stylesheet" media="all" />
    <link href="stylesheets/style.css" type="text/css" rel="stylesheet" media="all" /> 
  </head>

  <body ng-controller="unipaperCtrl">
	<nav class="navbar navbar-default" id="sel-story">
		<div class="container-fluid">
			<div class="navbar-header">
					<a class="navbar-brand"><img src="images/logo.jpg"></a>
			</div>
			
			<div class="menu">
        <div class="menu-user-block">
            <div class="dropdown dropdown-avatar">
                <a href="javascript: void(0);" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                <span class="avatar" href="javascript:void(0);">
                        <img src="cleanui/assets/common/img/temp/avatars/1.jpg" alt="Alternative text to the image">
                    </span>   
                </a>
                <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="" role="menu">
                
                   <a class="dropdown-item" href="/storyview"><i class="dropdown-icon icmn-circle-right"></i> My Stories</a>
                    <a class="dropdown-item" href="/profileview"><i class="dropdown-icon icmn-circle-right"></i> Profile</a>
                    
       <div class="dropdown-divider"></div>
      <%if (sessiontrue > 0) { %>
                    <a class="dropdown-item" href="/logout"><i class="dropdown-icon icmn-exit"></i> Logout</a>
                     <% } %>
    </ul>
            </div>
        </div>
        
    </div>
		</div>
		<div class="wizard">
            
                <ul class="nav nav-wizard">

                    <li class="active">
                        <a href="#step1" data-toggle="tab">Select a story type</a>
                    </li>

                    <li class="disabled write">
                        <a href="#step2" data-toggle="tab">Write a story</a>
                    </li>

                    <li class="disabled Preview">
                        <a href="#step3" data-toggle="tab">Preview submit</a>
                    </li>
                </ul>
				
					<h5>Select a Story Type</h5>
				<div class="btns">
                <input type="button" value="Back" ng-click="storytypeback()"class="btn btn-primary">
					<!--<input class="btn btn-primary next" ng-click="storytypenext()" value="Next" type="button">-->
				</div>
			</div>
		</nav>
		
		<footer id="footer-sel">
			<div class="btns">
				<input ng-class="{next: selected=='article'}" class="btn btn-primary" ng-click="selected='article';selectCat($event)" value="Article" storytype="Article" type="button">
				<input ng-class="{next: selected=='listicle'}"class="btn btn-primary" ng-click="selected='listicle';selectCat($event)" value="Listicle" storytype="Listicle" type="button">
				<input ng-class="{next: selected=='gallery'}" class="btn btn-primary" ng-click="selected='gallery';selectCat($event)" value="Gallery" storytype="Gallery" type="button">
			</div>
		</footer>
          <script src="javascripts/custom.js"></script>
    <script src="services/writerservice.js"></script>
</body>
</html>